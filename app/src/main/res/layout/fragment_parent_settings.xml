<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">
    <!-- Title -->
    <TextView
        android:id="@+id/profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil Parent"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paramètres des comptes Enfant"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/profile_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Card for child account -->
    <androidx.cardview.widget.CardView
        android:id="@+id/child_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/child_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Antonin"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/child_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Niveau : 3"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- Options List -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modifier le nom ou le mot de passe"
                android:drawableStart="@android:drawable/ic_menu_edit"
                android:drawablePadding="8dp"
                android:paddingVertical="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gérer les thèmes autorisés"
                android:drawableStart="@android:drawable/ic_menu_manage"
                android:drawablePadding="8dp"
                android:paddingVertical="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gérer le niveau et l’âge"
                android:drawableStart="@android:drawable/ic_lock_idle_lock"
                android:drawablePadding="8dp"
                android:paddingVertical="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gérer le temps d’écran"
                android:drawableStart="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="8dp"
                android:paddingVertical="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Add Child Button -->
    <Button
        android:id="@+id/add_child_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Ajouter un Enfant"
        android:backgroundTint="#544B8A"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/child_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>