<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:padding="16dp">

    <!-- XP + Avatar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/xpLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="0XP : LEVEL 1"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A quoi joue-t-on aujourd'hui ?"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="378dp"
        android:layout_height="323dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <Button
            android:id="@+id/btnCulture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#FF6F00"
            android:text="Culture Generale"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnHistoires"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#2E7D32"
            android:text="Histoires Interactives"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnGrammaire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#3F51B5"
            android:text="Grammaire"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnMaths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#A94036"
            android:text="Mathematiques"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/funFact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anecdote du jour : Savais-tu que \anecdote\ ?"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>