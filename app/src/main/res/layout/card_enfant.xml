<?xml version="1.0" encoding="utf-8"?>
<!-- Card for child account -->
<androidx.cardview.widget.CardView
    android:id="@+id/child_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:layout_constraintTop_toBottomOf="@id/subtitle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_margin="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/child_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antonin"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/child_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Niveau : 3"
            android:textSize="14sp"
            android:layout_marginTop="2dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Options List -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modifier le nom ou le mot de passe"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:drawablePadding="8dp"
            android:paddingVertical="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gérer les thèmes autorisés"
            android:drawableStart="@android:drawable/ic_menu_manage"
            android:drawablePadding="8dp"
            android:paddingVertical="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gérer le niveau et l’âge"
            android:drawableStart="@android:drawable/ic_lock_idle_lock"
            android:drawablePadding="8dp"
            android:paddingVertical="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gérer le temps d’écran"
            android:drawableStart="@android:drawable/ic_menu_recent_history"
            android:drawablePadding="8dp"
            android:paddingVertical="8dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>